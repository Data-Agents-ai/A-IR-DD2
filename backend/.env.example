# ===============================
# A-IR-DD2 Backend Configuration
# ===============================

# Database
MONGODB_URI=mongodb://localhost:27017/a-ir-dd2-dev
MONGODB_TEST_URI=mongodb://localhost:27017/a-ir-dd2-test

# Authentication JWT
# Generate with: node scripts/generate-secrets.js
JWT_SECRET=YOUR_64_BYTES_HEX_HERE
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=YOUR_64_BYTES_HEX_HERE
REFRESH_TOKEN_EXPIRATION=7d

# Encryption for API Keys
# Generate with: node scripts/generate-secrets.js
ENCRYPTION_KEY=YOUR_32_BYTES_HEX_HERE

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
