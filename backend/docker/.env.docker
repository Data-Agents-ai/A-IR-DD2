# Backend .env configuration for Docker MongoDB setup
# Copy this file to .env.docker and update the values
# Use this file when running MongoDB via docker-compose

# ===== SERVER CONFIGURATION =====
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ===== DATABASE CONFIGURATION (MongoDB via Docker) =====
# Connection string for Docker MongoDB container
# Username: admin
# Password: SecurePassword123!
# Database: a-ir-dd2-dev
MONGODB_URI=mongodb://admin:SecurePassword123!@localhost:27017/a-ir-dd2-dev?authSource=admin

# ===== SECURITY CONFIGURATION (CRITICAL - J4.3) =====
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_32_chars_hex_here

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_64_hex_chars_here

JWT_EXPIRY=3600000

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=debug
